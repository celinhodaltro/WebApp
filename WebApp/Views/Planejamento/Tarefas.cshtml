@model List<Lib.Data.TarefaDal>



<form method="post">
    <div class="row">
        <div class="col-10">
            <input id="NomeDaTarefa" name="NomeDaTarefa" class="form-control" />
        </div>
        <div class="col-2">
            <button asp-action="AdicionarTarefa" asp-controller="Planejamento" class="btn btn-primary form-control"><i class="fa-solid fa-check"></i></button>
        </div>
    </div>
    <div>
        <table class="table mt-3">
            <thead>
                <tr>
                    <th>Feito</th>
                    <th>Meta</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    
                if (Model != null)
                        foreach (var tarefa in Model)
                        {
                            <tr>
                                <td width="10%"><input class="form-control" asp-for="@tarefa.Feita"  oninput="this.form.submit()"/></td>
                                <td width="85%">@tarefa.Nome</td>
                                <td width="15%"><button class="btn btn-danger" asp-action="RemoverTarefa" asp-controller="Planejamento" asp-route-id="@tarefa.Id">X</button></td>
                            </tr>
                        }
                }
            </tbody>
        </table>
    </div>
</form>