@model List<Lib.Data.CargoDal>



<form method="post">
    <h3 class="mb-3">Cargos</h3>
    <div class="row">
        <div class="col-5">
            <input id="Nome" placeholder="Nome do Cargo." name="Nome" class="form-control" />
        </div>
        <div class="col-2">
            <input id="Nivel" placeholder="Nivel." name="Nivel" class="form-control" />
        </div>
        <div class="col-2">
            <button asp-action="AdicionarCargo" asp-controller="PainelAdmin" class="btn btn-primary form-control"><i class="fa-solid fa-check"></i></button>
        </div>
    </div>
    <div>
        <table class="table mt-3">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Nivel</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{

                    if (Model != null)
                        foreach (var cargo in Model)
                        {
                            <tr>
                                <td width="60%">@cargo.Nome</td>
                                <td width="20%">@cargo.Nivel</td>
                                <td width="10%"><button class="btn btn-primary" asp-action="EditarCargo" asp-controller="PainelAdmin" asp-route-id="@cargo.Id" formmethod="get"><i class="fa-solid fa-pen-to-square"></i></button></td>
                                <td width="10%"><button class="btn btn-danger" asp-action="RemoverCargo" asp-controller="PainelAdmin" asp-route-id="@cargo.Id">X</button></td>
                            </tr>
                        }
                }
            </tbody>
        </table>
    </div>
</form>
