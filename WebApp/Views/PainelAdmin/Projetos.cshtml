@model List<Lib.Data.ProjetoDal>


@{ViewData["Title"] = "Projetos";}

<div class="row d-flex justify-content-center">
    <div class="col-2">
        <a asp-action="CriarProjeto" asp-controller="PainelAdmin" class="btn btn-primary form-control">Criar Projeto</a>
    </div>
</div>
<hr />

<div>
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Prioridade</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{

                if (Model != null)
                    foreach (var projeto in Model)
                    {
                        <tr>
                            <td width="70%">@projeto.Nome</td>
                            <td width="10%">@projeto.Prioridade</td>
                            <td width="6%"><a class="btn btn-secondary" asp-action="EditarProjeto" asp-controller="PainelAdmin" asp-route-id="@projeto.Id"><i class="fa-solid fa-pen-to-square"></i></a></td>
                            <td width="6%"><a class="btn btn-danger " asp-action="RemoverProjeto" asp-controller="Planejamento" asp-route-id="@projeto.Id"><i class="fa-solid fa-xmark"></i></a></td>
                            <td width="6%"><a class="btn btn-primary" asp-action="Chamados" asp-controller="Planejamento" asp-route-id="@projeto.Id"><i class="fa-solid fa-arrow-right"></i></a></td>
                        </tr>
                    }
            }
        </tbody>
    </table>
</div>

